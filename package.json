    "del": "^5.1.0",
    "fetch-mock": "^9.2.1",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "husky": "^4.2.1",
    "immer": "^8.0.1",
    "jest": "^24.9.0",
    "jest-environment-jsdom-sixteen": "^1.0.2",
    "jest-fetch-mock": "^3.0.3",
    "json-stable-stringify": "^1.0.1",
    "lint-staged": "^10.0.7",
    "lit-html": "^1.1.2",
    "lodash": "^4.17.15",
    "lwc": "1.3.2",
    "patch-package": "^6.2.0",
    "prettier": "^1.19.1",
    "rollup": "^1.27.8",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-visualizer": "^3.3.0",
    "supertest": "^4.0.2",
    "ts-loader": "^6.2.1",
