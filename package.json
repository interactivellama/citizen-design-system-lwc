{
  "name": "citizen-design-system-lwc",
  "version": "0.0.0",
  "description": "Citizen Design System - LWC Components",
  "author": "Stephen James <sjames@mulesoft.com>",
  "homepage": "https://github.com/interactivellama/citizen-design-system-lwc#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interactivellama/citizen-design-system-lwc.git"
  },
  "scripts": {
    "compile": "rollup -c",
    "compile:watch": "rollup -c -w",
    "storybook": "node storybook.js",
    "build-storybook": "build-storybook",
    "cli": "node cli/index.js",
    "heroku-postbuild": "yarn rollup && yarn storybook:build",
    "rollup": "rm -rf .dist && npm run theme && NODE_ENV=production rollup -c rollup.config.js",
    "rollup:watch": "rm -rf .dist && npm run theme && rollup -c rollup.config.js --watch",
    "serve": "node -r dotenv/config server/index.js",
    "serve-storybook": "STORYBOOK=true node -r dotenv/config server/index.js",
    "storybook:build": "build-storybook -o .storybook-static -s .dist",
    "test": "NODE_ENV=test jest",
    "theme": "yarn run cli -- theme"
  },
  "bugs": {
    "url": "https://github.com/interactivellama/citizen-design-system-lwc/issues"
  },
  "dependencies": {
    "connect": "^3.7.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "superstatic": "^6.0.4"
  },
  "devDependencies": {
    "@a11y/focus-trap": "^1.0.5",
    "@babel/core": "^7.7.4",
    "@babel/plugin-transform-typescript": "^7.8.3",
